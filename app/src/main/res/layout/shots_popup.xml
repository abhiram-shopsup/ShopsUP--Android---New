<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="300dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:background="@drawable/bg_shots_notification"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <!--CARD VIEW IS FOR MAKING IMAGE ROUND-->
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@color/black20pc"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />
        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/earned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="You earned"
            android:textColor="#4a4a4a"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/shots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="120 shots"
            android:textColor="#4a4a4a"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/subText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="Thank you for walking into\nAllen Solly Outlet, Orion mall "
            android:textColor="#4a4a4a"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            />


    </LinearLayout>
</android.support.v7.widget.CardView>